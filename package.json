    "@types/jsonwebtoken": "^9.0.5",
    "crypto-js": "^4.2.0",
    "@types/crypto-js": "^4.2.1",
    "zod": "^3.22.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "faker": "^6.6.6",
    "@types/faker": "^6.6.9",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.14.202",

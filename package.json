{
  "name": "eventpros-nz",
  "version": "1.0.0",
  "description": "Event Pros NZ - New Zealand's Event Ecosystem",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:performance": "k6 run tests/performance/load-test.js",
    "type-check": "tsc --noEmit",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "tsx scripts/seed-database.ts",
    "monitor:start": "tsx scripts/start-monitoring.ts",
    "security:scan": "npm audit && npm run security:deps",
    "security:deps": "npx audit-ci --config audit-ci.json",
    "performance:analyze": "tsx scripts/analyze-performance.ts"
  },
  "dependencies": {

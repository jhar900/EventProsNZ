# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Event Pros NZ

# Vercel Configuration
VERCEL_URL=
VERCEL_ENV=development
VERCEL_REGION=iad1

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Configuration (for direct connection pooling)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventpros
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# External Services
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Service (choose one - all have free tiers)
# Option 1: Resend (recommended - 3,000 emails/month free)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Option 2: Brevo/Sendinblue (300 emails/day free)
# BREVO_API_KEY=your_brevo_api_key
# BREVO_FROM_EMAIL=noreply@yourdomain.com

# Option 3: SMTP (Gmail, Outlook, or custom SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# Option 4: SendGrid (paid, no free tier)
# SENDGRID_API_KEY=your-sendgrid-key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Fallback email from address
EMAIL_FROM=noreply@eventprosnz.com

VIRUSTOTAL_API_KEY=your-virustotal-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Google OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Monitoring & Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_MICROSOFT_CLARITY_ID=your-clarity-project-id
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_DIR=uploads

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_THRESHOLD_WARNING=1000
PERFORMANCE_THRESHOLD_ERROR=3000

# Error Handling
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_WEBHOOK=your-webhook-url

# Real-time Configuration
REALTIME_MAX_RECONNECT_ATTEMPTS=5
REALTIME_RECONNECT_DELAY=1000
REALTIME_FALLBACK_POLLING_INTERVAL=5000

# Development
DEBUG_MODE=true
LOG_LEVEL=debug
